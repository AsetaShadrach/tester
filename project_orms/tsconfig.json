{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["ES2022", "ESNext", "ES6","es7"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node"
    },
    "exclude": [
            "node_modules",
            "dist"
        ]
}